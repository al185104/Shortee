<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shortee.Views.HistoryPage"
             xmlns:models="clr-namespace:Shortee.Models"
             xmlns:helpers="clr-namespace:Shortee.Helpers"
             Title="History">
    <Grid RowDefinitions="Auto,*">
        <SearchBar Grid.Row="0" Placeholder="Search" Margin="0,0,0,20"/>
        <CollectionView Grid.Row="1" ItemsSource="{Binding History}" SelectionMode="Single" SelectionChanged="CollectionView_SelectionChanged">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ShortURLModel">
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,40" Padding="10">
                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding OriginalUrl}" LineBreakMode="TailTruncation" VerticalTextAlignment="End"/>
                        <Label Grid.Row="1" Grid.Column="0" Text="{Binding ShortenedUrl}" FontSize="12" TextColor="{DynamicResource Gray500}" VerticalTextAlignment="Start"/>

                        <Label Grid.RowSpan="2" Grid.Column="1" Text="{x:Static helpers:Icon.ChevronRight}" FontFamily="Icons" FontSize="Medium" 
                               HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <Label Text="Nothing on the list" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>