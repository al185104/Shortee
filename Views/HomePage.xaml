<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shortee.Views.HomePage"
             xmlns:helpers="clr-namespace:Shortee.Helpers"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             Title="Home">
    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,Auto,360" RowSpacing="15">
            <Entry Grid.Row="0" Placeholder="Enter URL" Text="{Binding LongURL, Mode=TwoWay}" HorizontalOptions="Fill" />
            <Button Grid.Row="1" Text="Shorten" Command="{Binding ShortenCommand}"/>
            <Entry Grid.Row="2" Text="{Binding ShortURL, Mode=TwoWay}" IsReadOnly="True"/>
            <Label Grid.Row="2" Text="{x:Static helpers:Icon.Copy}" FontFamily="Icons" FontSize="Medium" 
               HorizontalTextAlignment="End" VerticalTextAlignment="Center" Padding="15,0" HorizontalOptions="End">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CopyToClipboardCommand}"/>
                </Label.GestureRecognizers>
            </Label>

            <Border Grid.Row="3" Padding="20" BackgroundColor="{DynamicResource Secondary}" VerticalOptions="Fill">
                <zxing:BarcodeGeneratorView Format="QrCode" Value="{Binding ShortURL}"
                HorizontalOptions="Fill" VerticalOptions="Fill"/>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>