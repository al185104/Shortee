<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Shortee.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Shortee.Views"
    xmlns:helpers="clr-namespace:Shortee.Helpers"
    Title="Shortee">

    <TabBar>
        <ShellContent Title="Home" Route="HomePage" Icon="{FontImage Glyph={x:Static helpers:Icon.Home}, FontFamily=Icons}" ContentTemplate="{DataTemplate views:HomePage}"/>
        <ShellContent Title="History" Route="HistoryPage" Icon="{FontImage Glyph={x:Static helpers:Icon.Clock}, FontFamily=Icons}" ContentTemplate="{DataTemplate views:HistoryPage}"/>
        <ShellContent Title="Scan" Route="ScanQRPage" Icon="{FontImage Glyph={x:Static helpers:Icon.Maximize}, FontFamily=Icons}" ContentTemplate="{DataTemplate views:ScanQRPage}"/>
        <!--<ShellContent Title="Settings" Route="SettingsPage" Icon="{FontImage Glyph={x:Static helpers:Icon.Settings}, FontFamily=Icons}" ContentTemplate="{DataTemplate views:SettingsPage}"/>-->
    </TabBar>

</Shell>
